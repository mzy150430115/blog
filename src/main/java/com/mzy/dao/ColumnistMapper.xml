<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- columnist -->
<mapper namespace="com.mzy.dao.ColumnistMapper">
    <!-- This code was generated by TableGo tools, mark 1 begin. -->
    <!-- 字段映射 -->
    <resultMap id="columnistMap" type="com.mzy.entity.Columnist">
        <id column="id" property="id" jdbcType="INTEGER" />
        <result column="name" property="name" jdbcType="VARCHAR" />
        <result column="intro" property="intro" jdbcType="VARCHAR" />
        <result column="blog_count" property="blogCount" jdbcType="INTEGER" />
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP" />
    </resultMap>
    <!-- This code was generated by TableGo tools, mark 1 end. -->

    <!-- This code was generated by TableGo tools, mark 2 begin. -->
    <!-- 表查询字段 -->
    <sql id="allColumns">
        c.id, c.name, c.intro, c.blog_count, c.create_time
    </sql>
    <!-- This code was generated by TableGo tools, mark 2 end. -->

    <!-- 查询所有数据 -->
    <select id="findColumnistAll" resultMap="columnistMap">
        SELECT
        <include refid="allColumns" />
        FROM columnist c
    </select>

    <!-- 根据条件参数查询数据列表 -->
    <select id="findColumnistByCondition" resultMap="columnistMap" parameterType="map">
        SELECT
        <include refid="allColumns" />
        FROM columnist c WHERE 1 = 1
        <if test="name != null and name != ''">
            AND c.name LIKE CONCAT('%', #{name}, '%')
        </if>
        <if test="intro != null and intro != ''">
            AND c.intro LIKE CONCAT('%', #{intro}, '%')
        </if>
        <if test="blogCount != null">
            AND c.blog_count = #{blogCount}
        </if>
        <if test="createTime != null">
            AND c.create_time = #{createTime}
        </if>
    </select>

    <!-- 根据主键查询数据 -->
    <select id="findColumnistByIds" resultMap="columnistMap" parameterType="list">
        SELECT
        <include refid="allColumns" />
        FROM columnist c WHERE c.id IN
        <foreach collection="list" index="index" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </select>

    <!-- 插入数据 -->
    <insert id="insertColumnist" parameterType="columnist">
        INSERT INTO columnist (
            id, name, intro, blog_count, create_time
        ) VALUES (
            #{id},
            #{name},
            #{intro},
            #{blogCount},
            #{createTime}
        )
    </insert>

    <!-- 修改数据 -->
    <update id="updateColumnist" parameterType="columnist">
        UPDATE columnist
        <set>
            <if test="name != null">
                name = #{name},
            </if>
            <if test="intro != null">
                intro = #{intro},
            </if>
            <if test="blogCount != null">
                blog_count = #{blogCount},
            </if>
            <if test="createTime != null">
                create_time = #{createTime}
            </if>
        </set>
        WHERE id = #{id}
    </update>

</mapper>
